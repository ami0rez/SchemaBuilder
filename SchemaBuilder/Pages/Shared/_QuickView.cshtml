<script>

    var myClientList1 = ['CLIENT_NAME', 'CLIENT_USERNAME', 'CLIENT_PASSWORD', 'CLIENT_ADDRESS', 'CLIENT_STATE', 'CLIENT_COUNTRY', 'CLIENT_EMAIL', 'CLIENT_ROLE']
    var myClientNameList1 = ['Name', 'Username', 'Password', 'Full Address', 'State', 'Country', 'Email', 'Role']
    var myCompanyList1 = ['COMPANY_NAME', 'COMPANY_LOGO', 'COMPANY_PIC', 'CLIENT_ADDRESS', 'COMPANY_PHONE', 'COMPANY_EMAIL', 'COMPANY_WEBSITE', 'COMPANY_ABOUT']
    var myCompanyNameList1 = ['Name', 'Logo', 'Main Picture', 'Full Address', 'Phone', 'Email', 'Website', 'About']
    var myOrderList1 = ['ORDER_ID', 'ORDER_SHIPPING', 'ORDER_DETAIL', 'ORDER_BILLING', 'ORDER_SHIPPING_STATUS']
    var myOrderNameList1 = ['Order Id', 'Shipping Address', 'Order Items Listed', 'Billing Address', 'Shipping Address']

    function buildList() {
        var line = `<div class="col-md-2"></div>
                            <div class="col-md-4"><a href="#" data-toggle="popover" data-placement="bottom" data-content="copied!!!" onclick="copyClipboard(this,'BRACKET_NAME');return false;" data-original-title title> FIELD</a></div>
                            <div class="col-md-6"><a href="#" data-toggle="popover" data-placement="bottom" data-content="copied!!!" onclick="copyClipboard(this,'BRACKET_NAME');return false;"  data-original-title title> BRACKET_NAME</a></div>`

        var line2 = "";
        for (var i = 0; i < myClientList1.length; i++) {
            line2 = line.replace(/BRACKET_NAME/g, "{{" + myClientList1[i] + "}}");
            line2 = line2.replace(/FIELD/g, myClientNameList1[i]);
            $('#clientInfo').append(line2);
        }
        for (var i = 0; i < myCompanyList1.length; i++) {
            line2 = line.replace(/BRACKET_NAME/g, "{{" + myCompanyList1[i] + "}}");
            line2 = line2.replace(/FIELD/g, myCompanyNameList1[i]);
            $('#companyInfo').append(line2);
        }
        for (var i = 0; i < myOrderList1.length; i++) {
            line2 = line.replace(/BRACKET_NAME/g, "{{" + myOrderList1[i] + "}}");
            line2 = line2.replace(/FIELD/g, myOrderNameList1[i]);
            $('#orderInfo').append(line2);
        }
    }

    function copyClipboard(object, text) {
        $('#clipboard1').removeClass('hide');
        $('#clipboard1').val(text);
        var copyText = document.getElementById("clipboard1");

        copyText.select();
        copyText.setSelectionRange(0, 99999); /*For mobile devices*/
        document.execCommand("copy");
        $('#clipboard1').addClass('hide');
        setTimeout(function () { $(object).popover('toggle'); }, 10);
        setTimeout(function () { $(object).popover('toggle'); }, 650);
    }

    function closeEditorPanel(ev) {
        ev.preventDefault();
        $('#editor-panel').hide('slide', { easing: 'easeOutCubic' }, 400);
        $('#sections').animate({
            left: ''
        });
    }
</script>