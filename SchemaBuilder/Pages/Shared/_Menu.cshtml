@using SlickyCommonLibrary.DomainUI;
@using SlickyCommonLibrary.Enums;


<style>
    .hide-scrollbar::-webkit-scrollbar {
        width: 0;
    }

    @@media (max-width: 767px) {
        .btn-upgrade {
            display: none;
        }

        .app-sidenav.ant-layout-sider-collapsed .sidenav-footer .nav-text {
            display: inline;
        }
    }

    .ant-menu-item a:hover, .ant-menu-submenu-title span:hover {
        color: #3EB7ED !important;
    }

        .ant-menu-item a:hover i svg, .ant-menu-submenu-title span:hover i svg {
            stroke: #3EB7ED !important;
        }

    .anticon svg {
        stroke: #7B8794;
        height: 25px;
        width: 25px;
    }

    .ant-menu-submenu-active > .ant-menu-submenu-active-element {
        background: rgba(224, 245, 255, 0.4) !important;
        border-radius: 10px !important;
    }

    .ant-menu-submenu-active.ant-menu-submenu-active-element {
        background: rgba(224, 245, 255, 0.4) !important;
        border-radius: 10px !important;
    }

    .ant-menu-item-selected {
        background-color: #FEFEFE !important;
    }

    .ant-menu-submenu-active > a > i > svg {
        stroke: #3EB7ED;
    }

    .ant-menu-submenu-active > a {
        color: #3EB7ED;
    }

    .small-menu-icons {
        padding: 0 !important;
    }

    .ant-menu-item > a, .ant-menu-submenu-title > span {
        min-width: 25px;
        margin-left: -5px !important;
    }

    .ant-menu-inline .ant-menu-item-selected:after {
        color: inherit !important;
        border-right: 0px;
    }

    .ant-menu-inline-uls {
        margin-left: 7px !important;
    }

    .upgrade-gradient-box {
        position: absolute;
        width: 194px;
        height: 45px;
        background: linear-gradient(94.39deg, #5EF5F8 6.03%, #3EB7ED 53.91%, #2ADDA1 96.11%);
    }

        .upgrade-gradient-box > span {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }
</style>

<div class="app-sidenav-container isPopUp" id="app-sidenav-container">
